@model webOdev.Models.EmergencyViewModel
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <!-- Formun genişliğini artırdım -->
            <div class="card shadow-lg border-0 rounded-lg">
                <div class="card-header text-center" style="background-color: #660000; color: white; border-radius: 10px 10px 0 0;">
                    <h4 class="font-weight-bold" style="font-size: 1.5rem;">Acil Durum Bilgisi</h4>
                </div>
                <div class="card-body p-5">
                    <form asp-action="CreateEmergency" method="post">
                        <!-- Acil Durum Başlığı Alanı -->
                        <div class="form-group mb-4">
                            <label asp-for="Title" class="control-label" style="font-weight: 600;">Acil Durum Başlığı</label>
                            <input asp-for="Title" class="form-control form-control-lg shadow-sm rounded-pill p-3" placeholder="Acil durum başlığını girin" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <!-- Acil Durum Mesajı Alanı -->
                        <div class="form-group mb-4">
                            <label asp-for="Message" class="control-label" style="font-weight: 600;">Acil Durum Mesajı</label>
                            <textarea asp-for="Message" class="form-control form-control-lg shadow-sm p-3" placeholder="Acil durumu açıklayın" rows="6"></textarea>
                            <span asp-validation-for="Message" class="text-danger"></span>
                        </div>

                        <!-- Acil Durum Gönder Butonu -->
                        <div class="form-group text-center mb-4">
                            <button type="submit" class="btn btn-lg btn-block neon-border" style="background-color: #660000; color: white; font-weight: 600; border-radius: 30px; padding: 12px 30px;">Acil Durumu Gönder</button>
                        </div>
                    </form>

                    <!-- Hata Mesajı -->
                    @if (ViewBag.ErrorMessage != null)
                    {
                        <div class="alert alert-danger text-center">
                            @ViewBag.ErrorMessage
                        </div>
                    }

                    <!-- İptal Et Butonu -->
                    <div class="form-group text-center mt-4">
                        <a href="/Home/Index" class="btn btn-lg btn-block neon-border" style="background-color: #330000; color: white; font-weight: 600; border-radius: 30px; padding: 12px 30px;">İptal Et</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .neon-border {
        border: 2px solid #330000; /* Neon kırmızı renk */
        box-shadow: 0 0 5px #330000, 0 0 10px #330000, 0 0 15px #330000, 0 0 20px #330000; /* Neon efekti */
    }

    .form-group input:focus, .form-group textarea:focus {
        border-color: #330000; /* Focus anında neon kırmızı çerçeve */
        box-shadow: 0 0 5px #330000, 0 0 10px #330000, 0 0 15px #330000, 0 0 20px #330000; /* Focus anında neon ışık efekti */
    }

    /* Acil durum butonu için neon kırmızı çerçeve */
    .btn.neon-border:hover {
        border-color: #330000;
        box-shadow: 0 0 5px #330000, 0 0 10px #330000, 0 0 15px #330000, 0 0 20px #330000; /* Hover (fareyle üzerine gelindiğinde) neon efekti */
    }

    /* Input alanları için daha estetik görünüm */
    .form-control {
        font-size: 1rem;
        border-radius: 30px; /* Başlık ve mesajlar için oval köşeler */
        transition: border-color 0.3s, box-shadow 0.3s;
    }

    /* Acil durum açıklaması için daha az oval alan */
    .form-control-lg {
        border-radius: 8px; /* Daha az oval */
    }

    /* Butonun genel görünümü */
    .btn {
        font-weight: bold;
        padding: 12px 30px;
        border-radius: 30px;
        transition: all 0.3s;
    }

    /* Kayıt Ol bağlantısının hover efekti */
    a:hover {
        text-decoration: underline;
        color: #660000;
    }
</style>
