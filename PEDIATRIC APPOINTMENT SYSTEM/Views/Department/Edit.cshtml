@model webOdev.Models.Department

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">
            <!-- Daha geniş bir çerçeve -->
            <div class="card shadow-lg border-0 rounded-lg">
                <div class="card-header text-center" style="background-color: #660000; color: white; border-radius: 10px 10px 0 0;">
                    <h4 class="font-weight-bold">Departmanı Düzenle</h4>
                </div>
                <div class="card-body p-5">
                    <h3 class="text-center">Bu departmanı düzenlemek istediğinizden emin misiniz?</h3>

                    <!-- Departman Bilgileri -->
                    <div class="mb-4">
                        <h4 class="text-center">Departman Bilgileri</h4>

                        <!-- Departman Adı -->
                        <div class="border p-3 mb-3">
                            <dl class="row mb-0">
                                <dt class="col-sm-4">Departman Adı</dt>
                                <dd class="col-sm-8">@Model.Name</dd>
                            </dl>
                        </div>

                        <!-- Açıklama -->
                        <div class="border p-3 mb-3">
                            <dl class="row mb-0">
                                <dt class="col-sm-4">Açıklama</dt>
                                <dd class="col-sm-8">@Model.Description</dd>
                            </dl>
                        </div>

                        <!-- Yatak Sayısı -->
                        <div class="border p-3 mb-3">
                            <dl class="row mb-0">
                                <dt class="col-sm-4">Yatak Sayısı</dt>
                                <dd class="col-sm-8">@Model.BedCount</dd>
                            </dl>
                        </div>
                    </div>

                    <!-- Düzenleme Formu -->
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Id" />

                        <!-- Departman Adını Düzenle -->
                        <div class="form-group mb-4">
                            <label for="Name" style="font-weight: 600;">Departman Adı</label>
                            <input type="text" id="Name" asp-for="Name" class="form-control neon-border" placeholder="Departman Adı" />
                        </div>

                        <!-- Açıklamayı Düzenle -->
                        <div class="form-group mb-4">
                            <label for="Description" style="font-weight: 600;">Açıklama</label>
                            <input type="text" id="Description" name="Description" class="form-control neon-border" placeholder="Açıklama" />
                        </div>

                        <!-- Yatak Sayısını Düzenle -->
                        <div class="form-group mb-4">
                            <label for="BedCount" style="font-weight: 600;">Yatak Sayısı</label>
                            <input type="number" id="BedCount" asp-for="BedCount" class="form-control neon-border" placeholder="Yatak Sayısı" />
                        </div>

                        <!-- Kaydet Butonu -->
                        <div class="form-group text-center mb-4">
                            <button type="submit" class="btn btn-lg btn-block neon-border" style="background-color: #330000; color: white; font-weight: 600; border-radius: 30px;">
                                Kaydet
                            </button>
                        </div>

                        <!-- İptal Butonu -->
                        <div class="form-group text-center mb-4">
                            <a href="@Url.Action("Index")" class="btn btn-lg btn-block neon-border" style="background-color: #4d0000; color: white; font-weight: 600; border-radius: 30px;">
                                İptal
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* Card container - genel görünüm */
    .card {
        border-radius: 12px; /* Kartepenin kenarlarını yuvarlat */
        border: 1px solid #ddd; /* Hafif gri çerçeve */
    }

    /* Neon border efekti */
    .neon-border {
        border: 2px solid #330000; /* Neon kırmızı renk */
        box-shadow: 0 0 5px #330000, 0 0 10px #330000, 0 0 15px #330000, 0 0 20px #330000; /* Neon ışık efekti */
    }

    /* Giriş butonu hover efekti */
    .btn.neon-border:hover {
        border-color: #330000;
        box-shadow: 0 0 5px #330000, 0 0 10px #330000, 0 0 15px #330000, 0 0 20px #330000; /* Hover neon efekti */
        background-color: #4d0000; /* Hover anında renk değişimi */
    }

    /* Buton stilleri */
    .btn {
        font-weight: 600;
        border-radius: 30px;
    }

    /* Text center düzenlemeleri */
    .text-center {
        font-size: 20px;
    }

    /* Border ve padding düzenlemeleri */
    .border {
        border: 2px solid #ddd; /* Kutu kenarlığı */
        border-radius: 10px; /* Kenar yuvarlatma */
    }

    .p-3 {
        padding: 1rem; /* Kutu içinde içerik düzenlemesi */
    }

    /* Liste düzenlemeleri */
    .row dd {
        font-weight: 600;
    }
</style>

