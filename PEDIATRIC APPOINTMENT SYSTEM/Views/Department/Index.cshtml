@model IEnumerable<webOdev.Models.Department>

<h2 class="text-center">Bölümler Listesi</h2>

<div class="row">
    <div class="col-md-12 text-end mb-3">
        <a href="@Url.Action("Create")" class="btn btn-danger">Yeni Bölüm Oluştur</a>
    </div>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Ad</th>
            <th>Açıklama</th>
            <th>Yatak Sayısı</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var department in Model)
        {
            <tr>
                <td>@department.Name</td>
                <td>@department.Description</td>
                <td>@department.BedCount</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = department.Id })" class="btn btn-success btn-sm">Düzenle</a>
                    <a href="@Url.Action("Delete", new { id = department.Id })" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
