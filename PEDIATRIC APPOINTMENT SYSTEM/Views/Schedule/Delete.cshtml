@model webOdev.Models.Schedule

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">
            <!-- Daha geniş bir çerçeve -->
            <div class="card shadow-lg border-0 rounded-lg">
                <div class="card-header text-center" style="background-color: #660000; color: white; border-radius: 10px 10px 0 0;">
                    <h4 class="font-weight-bold">Takvimi Sil</h4>
                </div>
                <div class="card-body p-5">
                    <h5 class="font-weight-bold">Bu takvimi silmek istediğinizden emin misiniz?</h5>
                    <div class="form-group mb-4">
                        <label for="StartTime" style="font-weight: 600;">Başlangıç Zamanı</label>
                        <div class="input-box">
                            <span>@Model.StartTime</span>
                        </div>
                    </div>

                    <div class="form-group mb-4">
                        <label for="EndTime" style="font-weight: 600;">Bitiş Zamanı</label>
                        <div class="input-box">
                            <span>@Model.EndTime</span>
                        </div>
                    </div>

                    <div class="form-group mb-4">
                        <label for="AssignedTo" style="font-weight: 600;">Atanan Kişi</label>
                        <div class="input-box">
                            <span>@Model.AssignedTo</span>
                        </div>
                    </div>

                    <div class="form-group mb-4">
                        <label for="Department" style="font-weight: 600;">Departman</label>
                        <div class="input-box">
                            <span>@Model.Department</span>
                        </div>
                    </div>

                    <form asp-action="Delete" asp-controller="Schedule" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group text-center mb-4">
                            <button type="submit" class="btn btn-lg btn-block neon-border" style="background-color: #330000; color: white; font-weight: 600; border-radius: 30px;">
                                Sil
                            </button>
                        </div>
                        <div class="form-group text-center mb-4">
                            <a asp-action="Index" asp-controller="Schedule" class="btn btn-lg btn-block neon-border" style="background-color: #4d0000; color: white; font-weight: 600; border-radius: 30px;">
                                İptal
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* Kutu içindeki yazı düzenlemeleri */
    .input-box {
        padding: 10px;
        border-radius: 10px;
        background-color: #f9f9f9;
        border: 1px solid #ddd; /* Sade bir sınır ekledim */
        font-size: 16px;
    }

        .input-box span {
            font-weight: 600;
            color: #330000;
        }

    /* Card container - genel görünüm */
    .card {
        border-radius: 12px; /* Kartepenin kenarlarını yuvarlat */
        border: 1px solid #ddd; /* Hafif gri çerçeve */
    }

    /* Form alanları için padding ve margin düzenlemeleri */
    .form-group {
        margin-bottom: 1.5rem;
    }

    /* Card header tasarımı */
    .card-header {
        border-top-left-radius: 12px;
        border-top-right-radius: 12px;
        background-color: #660000;
        color: white;
        font-weight: 600;
        font-size: 20px;
    }

    /* Neon border efekti */
    .neon-border {
        border: 2px solid #330000; /* Neon kırmızı renk */
        box-shadow: 0 0 5px #330000, 0 0 10px #330000, 0 0 15px #330000, 0 0 20px #330000; /* Neon ışık efekti */
    }

    /* Giriş butonu hover efekti */
    .btn.neon-border:hover {
        border-color: #330000;
        box-shadow: 0 0 5px #330000, 0 0 10px #330000, 0 0 15px #330000, 0 0 20px #330000; /* Hover neon efekti */
        background-color: #4d0000; /* Hover anında renk değişimi */
    }

    /* Card body */
    .card-body {
        padding: 2rem;
    }

    /* Buton stilleri */
    .btn {
        font-weight: 600;
        border-radius: 30px;
    }
</style>
