                        </div>

                        <!-- Gönderme Butonu -->
                        <div class="form-group text-center mb-4">
                            <button type="submit" class="btn btn-danger btn-lg" style="font-weight: 600; border-radius: 30px;">
                                Acil Durumu Oluştur
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

