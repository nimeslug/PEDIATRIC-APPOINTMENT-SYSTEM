@model webOdev.Models.Assistant

<h2>Yeni Asistan Ekle</h2>

<form asp-action="CreateAssistant" method="post">
    <div class="form-group">
        <label for="Name">Name</label>
        <input asp-for="Name" class="form-control" placeholder="Enter first name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Surname">Surname</label>
        <input asp-for="Surname" class="form-control" placeholder="Enter last name" />
        <span asp-validation-for="Surname" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success btn-block">Create Assistant</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
